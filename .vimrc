" size of a hard tabstop
set tabstop=4

" size of an "indent"
set shiftwidth=4

" a combination of spaces and tabs are used to simulate tab stops at a width
" other than the (hard)tabstop
set softtabstop=4

" Set syntax highlighting
syntax on

" set background coloring to dark
set background=dark

" set backspacing to work as expected
set backspace=indent,eol,start

" set line numbers on
set nu

" set autoindent
set ai

" set smat indent
set si

" as a consequence of the above 2 lines, we need to set <F2> to toggle paste mode
set pastetoggle=<F2>

" Highlight the current cursor line
set cursorline
